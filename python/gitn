#!/usr/bin/env python3

import subprocess


class bcolors:
    HEADER = "\033[95m"
    OKBLUE = "\033[94m"
    OKCYAN = "\033[96m"
    OKGREEN = "\033[92m"
    WARNING = "\033[93m"
    FAIL = "\033[91m"
    ENDC = "\033[0m"
    BOLD = "\033[1m"
    UNDERLINE = "\033[4m"


def RunSubProcess(cmd):
    process = subprocess.Popen(
        cmd,
        stdout=subprocess.PIPE,
        stderr=subprocess.PIPE,
    )
    if not process.stdout:
        return
    while process.stdout.readable():
        line = process.stdout.readline()
        if not line:
            break
        print(line.strip())


RunSubProcess(["git", "-c", "status.color=always", "status"])
